<form action="/update-password" method="POST" class="password-form" id="passwordForm">
  <div class="form-group">
    <label for="currentPassword">Current Password</label>
    <input type="password" id="currentPassword" name="currentPassword" placeholder="Please input current password" required />
  </div>
  <div class="form-group">
    <label for="new-password">New Password</label>
    <input type="password" id="newPassword" name="newPassword" placeholder="Please input new password" required />
  </div>

  <!-- Status message will be updated here -->
  <p class="message">Status: <span class="status-message"></span></p>

  <button type="submit" class="btn btn__tertiary">Update Password</button>
</form>