

<form class="password-form">
  <div class="form-group">
    <label for="current-password">Current Password</label>
    <input type="password" id="oldPassword" name="oldPassword" placeholder="Please input current password" required />
  </div>
  <div class="form-group">
    <label for="new-password">New Password</label>
    <input type="password" id="newPassword" name="newPassword" placeholder="Please input new password" required />
  </div>
  <div class="status-message">Status message</div>
  <button type="submit" class="update-button">Update Password</button>
</form>



<% if (message) { %>
    <div class="alert alert-info"><%= message %></div>
  <% } %>
